# Copy this file to .env and fill in your secrets.
# NEVER commit your real keys. Keep .env out of version control.

# Provider selection
# Leave OPENAI_BASE_URL empty to use OpenAI cloud (paid)
# For Groq (recommended free tier):
OPENAI_BASE_URL=https://api.groq.com/openai/v1

# API key for your provider (example shows Groq). Do not commit real values.
OPENAI_API_KEY=your_groq_api_key_here

# Default model for your provider
# Groq suggestion: llama-3.1-8b-instant (fast, good JSON adherence)
MODEL_NAME=llama-3.1-8b-instant

# Database connection string
# Defaults to local SQLite if omitted. For Postgres (recommended):
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/resumeparser
DATABASE_URL=

# Supabase (optional: storage + managed Postgres)
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_RESUME_BUCKET=resumes
SUPABASE_ARTIFACT_BUCKET=artifacts

# Development mode (defaults to 1 for easy local testing without API keys)
# Set to 0 to enable real LLM API calls (requires valid OPENAI_API_KEY above)
LLM_DRY_RUN=1
